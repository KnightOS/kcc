VPATH        = @srcdir@
srcdir       = @srcdir@
top_builddir = @top_builddir@

include $(top_builddir)/Makefile.common

PORTS = z80 gb

all: 
	$(MAKE) -C z80 _sdldz80 _sdldgb E=$(E) BUILDDIR=../../../bin/

install: all
	$(INSTALL) $(top_builddir)/bin/sdldz80$(EXEEXT) `echo $(DESTDIR)$(bindir)/sdldz80$(EXEEXT)|sed '$(transform)'`
	$(STRIP) `echo $(DESTDIR)$(bindir)/sdldz80$(EXEEXT)|sed '$(transform)'`
	$(INSTALL) $(top_builddir)/bin/sdldgb$(EXEEXT) `echo $(DESTDIR)$(bindir)/sdldgb$(EXEEXT)|sed '$(transform)'`
	$(STRIP) `echo $(DESTDIR)$(bindir)/sdldgb$(EXEEXT)|sed '$(transform)'`

uninstall:
	cd $(DESTDIR)$(bindir); rm -f sdldz80$(EXEEXT) sdldgb$(EXEEXT)

include $(srcdir)/clean.mk
