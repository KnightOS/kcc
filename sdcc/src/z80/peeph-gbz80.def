replace {
	ld      (hl),a
        dec     hl
} by {
        ld      (hl-),a
}
replace {
	ld	(hl),a
	inc	hl
} by {
	ld	(hl+),a
}
replace {
	ld	a,(hl)
	inc	hl
} by {
	ld	a,(hl+)
}
replace {
	ld	a,[hl]
	inc	hl
} by {
	ld	a,[hl+]
}
replace {
	ld	a,[hl]
	inc	hl
} by {
	ld	a,[hl+]
}
replace {
	ld	[hl],a
	inc	hl
} by {
	ld	[hl+],a
}
replace {
	ld	[hl],a
	dec	hl
} by {
	ld	[hl-],a
}
replace {
	ld	(hl+),a
	ld	(hl),d
	dec	hl
	ld	e,(hl)
	inc	hl
	ld	d,(hl)
	ld	a,(de)
} by {
	ld	(hl+),a
	ld	(hl),d
	ld	e,a
	ld	a,(de)
}
replace {
	ld	(hl),a
	ld	%1,(hl)
} by {
        ld      (hl),a
        ld      %1,a
}
