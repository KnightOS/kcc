replace restart {
	ld	a,%1(%2)
	bit	%3,a
	jp	%4,%5
} by {
	bit	%3,%1(%2)
	jp	%4,%5
}
replace {
	ld	%1,%2)
	ld	a,%2)
} by {
        ld      %1,%2)
        ld      a,%1
}
replace {
	ld	%1),a
	xor	a,a
	or	a,%1)
	jp	z,%2
} by {
        ld      %1),a
        or      a,a
	jp	z,%2
}
replace {
	rlca
	ld	a,#0x00
	rla
} by {
	rlca
        and     a,#0x01
}
replace {
	ld	%3,a
	ld	l,%1)
	ld	h,%2)
	ld	l,(hl)
	ld	a,%3
} by {
	ld	%3,a
	ld	l,%1)
	ld	h,%2)
	ld	l,(hl)
}
