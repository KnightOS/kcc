VPATH        = @srcdir@
srcdir       = @srcdir@
top_builddir = @top_builddir@

include $(top_builddir)/Makefile.common

PORTS = z80 gb

all: 
	$(MAKE) -C z80 _sdlinkz80 _sdlinkgb E=$(E) BUILDDIR=../../../bin/

install: all
	$(INSTALL) $(top_builddir)/bin/sdlinkz80$(EXEEXT) `echo $(DESTDIR)$(bindir)/sdlinkz80$(EXEEXT)|sed '$(transform)'`
	$(STRIP) `echo $(DESTDIR)$(bindir)/sdlinkz80$(EXEEXT)|sed '$(transform)'`
	$(INSTALL) $(top_builddir)/bin/sdlinkgb$(EXEEXT) `echo $(DESTDIR)$(bindir)/sdlinkgb$(EXEEXT)|sed '$(transform)'`
	$(STRIP) `echo $(DESTDIR)$(bindir)/sdlinkgb$(EXEEXT)|sed '$(transform)'`

uninstall:
	cd $(DESTDIR)$(bindir); rm -f sdlinkz80$(EXEEXT) sdlinkgb$(EXEEXT)

include $(srcdir)/clean.mk
